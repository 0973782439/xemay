@model IEnumerable<Đồ_án_3.Models.Product>

@{
    ViewBag.Title = "HomeProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}


<h2 style="color:red;text-align:center;font-size:30px">Quản lý sản phẩm</h2>

<p style="float:left;width:80px;padding:0 0 10px 10px;background:red;text-align:center">
    <a style="text-decoration:none;color:white" href="@Url.Action("Create","QuanLySanPham")">Thêm</a>
</p>

@using (Html.BeginForm("HomeProduct", "QuanLySanPham", FormMethod.Get))
{
    <p style="float:right;width:20%;padding-bottom:10px ">
        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="search" />
    </p>
}
<div class="item-true">

    <table class="" border="1">
        <tr>
            <td class="one">
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td class="one">
                @Html.DisplayNameFor(model => model.Avatar)
            </td>
            <td class="one">
                @Html.DisplayNameFor(model => model.CategoryId)
            </td>
            <td class="one">
                @Html.DisplayNameFor(model => model.ShortDes)
            </td>
            <td class="one">
                @Html.DisplayNameFor(model => model.FullDes)
            </td>
            <td class="one">
                @Html.DisplayNameFor(model => model.Price)
            </td>
            <td class="one">
                @Html.DisplayNameFor(model => model.PriceDiscount)
            </td>
            <td class="one">
                @Html.DisplayNameFor(model => model.TypeId)
            </td>
            <td class="one">
                Sửa|CTSP|Xóa
            </td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="width:0px;height:80px">
                    <img src="~/Content/img/@item.Avatar" style="width:100%;height:100%" />
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Avatar)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullDes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceDiscount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeId)
                </td>
                @*<p style="float:left;width:80px;padding:0 0 10px 10px;background:red;text-align:center">
                        <a style="text-decoration:none;color:white" href="@Url.Action("Create","QuanLySanPham")">Thêm</a>
                    </p>*@
                <td>
                    <a style="text-decoration:none;color:white;background:blue" href="@Url.Action("Edit","QuanLySanPham",new { id = item.Id })">Sửa</a>
                    <a style="text-decoration:none;color:black;background:yellow" href="@Url.Action("Details","QuanLySanPham",new { id = item.Id })">CTSP</a>
                    <a style="text-decoration:none;color:black;background:red" href="@Url.Action("Delete","QuanLySanPham",new { id = item.Id })">Xóa</a>
                </td>
            </tr>
        }

    </table>
</div>