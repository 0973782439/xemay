                                                </div>
                                                <div class="col-sm-9">
                                                    <button class="dangnhap button" type="button" id="button-confirm">Login</button>
                                                </div>
                                            </div>
                                        </form>
                                        <script>
                                          
                                                var isRunning = false;
                                                var dangnhap = document.querySelector(".dangnhap");
                                                dangnhap.onclick = function () {
                                                    loginClick();
                                                }
                                                function loginClick() {
                                                    if (!isRunning) {
                                                        var taikhoan = document.querySelector(".taikhoan");
                                                        var matkhau = document.querySelector(".matkhau");
                                                        isRunning = true;
                                                        var form = new FormData();
                                                        form.append("uid", taikhoan.value)
                                                        form.append("pass", matkhau.value)
                                                        var xhr = new XMLHttpRequest();
                                                        xhr.open("POST", '/Home/CheckLogin', true);
                                                        xhr.timeout = 30000;
                                                        xhr.ontimeout = function () {
                                                            isRunning = false;
                                                            alert("Lỗi mạng !");
                                                        }
                                                        xhr.onreadystatechange = function () {
                                                            if (xhr.readyState == 4 && xhr.status == 200) {
                                                                var r = xhr.responseText;
                                                                var j = JSON.parse(r);
                                                                if (j.Data.status == "OK") {
                                                                    window.location = '/Admin/QuanLyDanhMuc/HomeCategory';
                                                                }
                                                                else {
                                                                    alert("Sai tài khoản hoặc mật khẩu !");
                                                                }
                                                                isRunning = false;
                                                            }
                                                        }
                                                        xhr.send(form);
                                                    }
                                                }
                                            
                                        
                                        </script>
